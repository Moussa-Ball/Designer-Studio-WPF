<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Studio.Softer.UI"
    xmlns:win="clr-namespace:Studio.Softer.Windows;assembly=Studio.Softer.Windows"
    xmlns:winui="clr-namespace:Studio.Softer.Windows.UI;assembly=Studio.Softer.Windows">

    <Style TargetType="{x:Type local:SofterWindow}">
        <Setter Property="win:WindowChrome.WindowChrome">
            <Setter.Value>
                <win:WindowChrome CornerRadius="0"
                                  CaptionHeight="32"
                                  GlassFrameThickness="0"
                                  ResizeBorderThickness="6"
                                  NonClientFrameEdges="None"
                                  UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SofterWindow}">
                    <Border Background="#252525">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#202020"                                                 
                                    BorderThickness="0 0 0 1" 
                                    BorderBrush="#181818"
                                    VerticalAlignment="Top">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <DockPanel Height="30"
                                               Grid.Column="0"
                                               VerticalAlignment="Top" 
                                               LastChildFill="False" 
                                               Margin="5 3 5 3"
                                               win:WindowChrome.IsHitTestVisibleInChrome="True">
                                        <winui:WindowTitleBarIcon Source="{TemplateBinding Icon}"
                                                                  x:Name="PART_WindowTitleBarIcon"
                                                                  win:WindowChrome.IsHitTestVisibleInChrome="True"/>
                                    </DockPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
