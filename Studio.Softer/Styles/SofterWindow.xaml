<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Studio.Softer.UI"
    xmlns:win="clr-namespace:Studio.Softer.Windows;assembly=Studio.Softer.Windows"
    xmlns:winui="clr-namespace:Studio.Softer.Windows.UI;assembly=Studio.Softer.Windows">

    <Style TargetType="{x:Type local:SofterWindow}">
        <Setter Property="win:WindowChrome.WindowChrome">
            <Setter.Value>
                <win:WindowChrome CornerRadius="0"
                                      CaptionHeight="0"
                                      GlassFrameThickness="0"
                                      ResizeBorderThickness="6"
                                      NonClientFrameEdges="None"
                                      UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SofterWindow}">
                    <Border Background="#252525">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <winui:WindowTitleBar Grid.Row="0"
                                                  Background="#202020"                                                 
                                                  BorderThickness="0 0 0 1" 
                                                  BorderBrush="#151515"
                                                  VerticalAlignment="Top"
                                                  Height="35"
                                                  x:Name="PART_WindowTitleBar"
                                                  Panel.ZIndex="1000000">
                                <DockPanel Height="30"
                                           VerticalAlignment="Top"
                                           LastChildFill="False">
                                    <Image Source="{TemplateBinding Icon}" />
                                </DockPanel>
                            </winui:WindowTitleBar>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
